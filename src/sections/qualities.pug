mixin quality_roller(quality)
  button.button.eos-roll(type="action" name="act_quality" data-quality=quality)

+section("Qualities")
  .columns 
    .column.is-narrow
      +dicefield_v("attr_quality_brawn", "Brawn")
        +quality_roller("Brawn")
      +dicefield_v("attr_quality_grace", "Grace")
        +quality_roller("Grace")
      +dicefield_v("attr_quality_wits", "Wits")
        +quality_roller("Wits")
      +dicefield_v("attr_quality_spirit", "Spirit")
        +quality_roller("Spirit")
    .column
      .columns
        .column
          +dicefield_v("attr_shooting", "Shooting")
        .column
          +numberfield_v("attr_speed", "Speed")
        .column
          +numberfield_v("attr_armor_value", "Armor Value")
      .columns
        .column
          +dicefield_v("attr_fighting", "Fighting")
        .column
          +numberfield_v("attr_toughness", "Toughness")(readonly)
        .column
          +numberfield_v("attr_armor_roll", "Armor Roll")
      .columns
        .column
          +numberfield_v("attr_willpower", "Willpower")
        .column
          +numberfield_v("attr_wounds", "Wounds")
        .column
          +numberfield_v("attr_exhaustion", "Exhaustion")